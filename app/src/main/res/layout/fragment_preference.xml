<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_main.actionbar.setting.sub_settings.PreferenceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/actionbar_with_back_btn_title" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/preference_preference_night_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Night mode"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/preference_preference_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"
            android:text="Font size"
            android:textColor="@android:color/black"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/preference_preference_sound_effect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sound effects"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>

</FrameLayout>