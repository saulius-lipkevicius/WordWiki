<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_main.actionbar.setting.sub_settings.LanguagesFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/palette_background">

        <include layout="@layout/actionbar_with_back_btn_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick your language"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/palette_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="More languages are incoming. Press to request your language"
            android:textColor="@color/palette_special_text"
            android:layout_marginEnd="30dp"
            android:textSize="16sp"
            android:textStyle="normal" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/fragment_settings_language_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />


    </LinearLayout>

</FrameLayout>