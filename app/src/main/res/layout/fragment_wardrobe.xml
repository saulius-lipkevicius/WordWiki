<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui_main.wardrobe.WardrobeFragment">

    <include layout="@layout/actionbar_wardrobe" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/tab_layout_main_custom"
        app:tabGravity="center"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorAnimationMode="elastic"
        app:tabIndicatorColor="@color/purple_200"
        app:tabIndicatorGravity="stretch"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/MineCustomTabText"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/purple_200"
        android:textSize="11sp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>