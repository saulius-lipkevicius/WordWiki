<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_selection_dialog_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/palette2"
            android:id="@+id/toolbar"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/section_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Sections"
                android:textAlignment="center"
                android:textColor="@color/palette4"
                android:textSize="25sp"
                android:textStyle="italic"/>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="1dp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/toolbar"
            android:background="@color/palette5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/palette5"
        android:layout_below="@id/recycleView"
        android:id="@+id/view_above_buttons"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/recycleView"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/cancel_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/home_selection_dialog_btn"
                android:text="None"
                android:textAllCaps="false"
                android:textColor="@color/palette4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/home_selection_dialog_btn"
                android:text="All"
                android:textAllCaps="false"
                android:textColor="@color/palette4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/home_selection_dialog_btn"
                android:text="OK"
                android:textAllCaps="false"
                android:textColor="@color/palette4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>